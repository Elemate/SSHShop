<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.wq.product.pojo.Product" table="product">
		<id name="pid">
			<generator class="native"></generator>
		</id>
		<property name="pname"></property>
		<property name="market_price"></property>
		<property name="shop_price"></property>
		<property name="pdate"></property>
		<property name="pdesc"></property>
		<property name="image"></property>
		<property name="is_hot"></property>
		<many-to-one name="categorySecond" class="com.wq.categorySecond.pojo.CategorySecond" column="csid" lazy="false"></many-to-one>
		<set name="orderItems">
			<key column="pid"></key>
			<one-to-many class="com.wq.order.pojo.OrderItem"/>
		</set>
	</class>
</hibernate-mapping>
